datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
enum ReviewStatus {
  awaiting
  pending
  scheduled
  submitted
  published
  expired
  approved
  public
}

model ReviewApproval {
  reviewId  String       @id
  status    ReviewStatus @default(pending)
  updatedAt DateTime     @updatedAt
}
